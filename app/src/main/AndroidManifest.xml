<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leo.mycarm">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AniWelcomeActivity"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/NoTitleFullscreen"
            android:name=".activity.RecordedActivity"
            android:screenOrientation="portrait" />

        <activity
            android:theme="@style/NoTitleFullscreen"
            android:name=".activity.CaptureJzActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VideoSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleFullscreen"/>
        <activity
            android:name=".activity.AudioEditorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AudioPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AudioSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AudioMixActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VideoConnectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MediaSelectVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VideoRecordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleFullscreen" />

        <activity
            android:name=".activity.PicEditorActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleFullscreen"
            android:windowSoftInputMode="adjustResize|stateHidden" />
    </application>

</manifest>